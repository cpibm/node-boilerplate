{
	"name": "node-boilerplate",
	"version": "1.0.0",
	"description": "NodeJS boilerplate for Katas",
	"main": "src/main.js",
	"bin": {
		"node-boilerplate": "index.js"
	},
	"scripts": {
		"test": "jest --coverage --verbose",
		"test:watch": "jest --watchAll --coverage --verbose",
		"test:coverage": "jest --collectCoverage --verbose",
		"lint": "eslint \"**/*.js\"",
		"lint:fix": "eslint \"**/*.js\" --fix"
	},
	"eslintIgnore": [
		"node_modules/",
		"commitlint.config.js"
	],
	"engines": {
		"node": ">=12.0.0"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "npm test && npm run lint",
			"pre-push": "npm test"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cpibm/node-boilerplate"
	},
	"jest": {
		"testEnvironment": "node",
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		]
	},
	"author": "Carlos Priego",
	"license": "MIT",
	"dependencies": {
		"chalk": "^4.1.0",
		"commander": "^7.0.0",
		"inquirer": "^7.3.3",
		"js-yaml": "^4.0.0",
		"spinnies": "^0.5.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"eslint": "^7.18.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.1.3",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-security": "^1.4.0",
		"jest": "^26.6.3",
		"prettier-eslint": "^12.0.0"
	}
}
