{
	"name": "node-boilerplate",
	"version": "1.0.0",
	"description": "NodeJS boilerplate for Katas",
	"main": "src/main.js",
	"bin": {
		"node-boilerplate": "index.js"
	},
	"scripts": {
		"test": "jest --coverage --verbose",
		"test:watch": "jest --watchAll --coverage --verbose",
		"test:coverage": "jest --collectCoverage --verbose",
		"lint": "eslint \"**/*.js\" --ignore-pattern node_modules/",
		"lint:fix": "eslint \"**/*.js\" --fix --ignore-pattern node_modules/"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "npm test && npm run lint",
			"pre-push": "npm test"
		}
	},
	"repository": {
		"type": "git",
		"url": ""
	},
	"jest": {
		"testEnvironment": "node",
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		]
	},
	"author": "Carlos Priego",
	"license": "MIT",
	"dependencies": {
		"chalk": "^4.1.0",
		"commander": "^7.0.0",
		"inquirer": "^7.3.3",
		"js-yaml": "^4.0.0",
		"spinnies": "^0.5.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0"
	}
}
